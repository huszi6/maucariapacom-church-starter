---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import { getCollection } from "astro:content";

// Get news/current articles (we'll use blog collection for now)
const allNews = await getCollection("blog", ({ data }) =>
  import.meta.env.PROD ? !data.draft : true
);
const newsArticles = allNews
  .sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf())
  .slice(0, 10);
---

<BaseLayout
  title="Aktuális | Magyar Katolikus Püspöki Konferencia"
  description="Legfrissebb hírek és aktuális információk a Magyar Katolikus Püspöki Konferenciától"
>
  <PageHeader
    title="Aktuális"
    subtitle="Legfrissebb hírek és információk"
    backgroundImage="/uploads/page-header-bg.webp"
  />

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        {newsArticles.length > 0 ? (
          <div class="space-y-8">
            {newsArticles.map((article) => (
              <article class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
                {article.data.image && (
                  <div class="aspect-video w-full overflow-hidden">
                    <img
                      src={article.data.image.url}
                      alt={article.data.image.alt}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-center text-sm text-gray-500 mb-3">
                    <time datetime={article.data.pubDate.toISOString()}>
                      {article.data.pubDate.toLocaleDateString('hu-HU', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="mx-2">•</span>
                    <span>{article.data.author}</span>
                  </div>
                  <h2 class="text-2xl font-bold text-gray-900 mb-3">
                    <a href={`/blog/${article.slug}`} class="hover:text-primary-600 transition-colors">
                      {article.data.title}
                    </a>
                  </h2>
                  <p class="text-gray-700 mb-4 leading-relaxed">
                    {article.data.description}
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="flex flex-wrap gap-2">
                      {article.data.tags.map((tag) => (
                        <span class="inline-block bg-primary-100 text-primary-800 text-xs px-2 py-1 rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <a
                      href={`/blog/${article.slug}`}
                      class="text-primary-600 hover:text-primary-700 font-medium text-sm hover:underline"
                    >
                      Tovább olvasom →
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="max-w-md mx-auto">
              <div class="mb-4">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">Még nincsenek hírek</h3>
              <p class="text-gray-500">Hamarosan itt találhatja a legfrissebb híreket és információkat.</p>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>