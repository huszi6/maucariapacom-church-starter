---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout
  title="Kapcsolatok | Magyar Katolikus Püspöki Konferencia"
  description="Vegye fel velünk a kapcsolatot. Elérhetőségeink és kapcsolattartási információink."
>
  <PageHeader 
    title="Kapcsolatok" 
    subtitle="Vegye fel velünk a kapcsolatot"
    backgroundImage="/uploads/contact-header-bg.webp"
  />
  
  <!-- Contact Information -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold mb-6">Küldjön Üzenetet</h2>
          
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Név</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-mail cím</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon (opcionális)</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Tárgy</label>
              <select 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              >
                <option value="">Kérjük válasszon</option>
                <option value="Általános kérdés">Általános kérdés</option>
                <option value="Hitoktatás">Hitoktatás</option>
                <option value="Képzések">Képzések</option>
                <option value="Dokumentumok">Dokumentumok</option>
                <option value="Jubileum 2025">Jubileum 2025</option>
                <option value="Egyéb">Egyéb</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Üzenet</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>
            
            <div>
              <Button type="submit" variant="primary">
                Üzenet Küldése
              </Button>
            </div>
          </form>
          
          <script>
            // Handle form submission
            document.getElementById('contact-form')?.addEventListener('submit', function(e) {
              e.preventDefault();
              
              // In a real implementation, you would handle the form submission here
              // For this template, we'll just show a success message
              alert('Köszönjük üzenetét! Hamarosan válaszolunk.');
              this.reset();
            });
          </script>
        </div>
        
        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold mb-6">Elérhetőségek</h2>
          
          <div class="space-y-8">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">Cím</h3>
                <address class="not-italic text-gray-700">
                  <p>Magyar Katolikus Püspöki Konferencia</p>
                  <p>Hitoktatási Bizottság</p>
                  <p>1071 Budapest, Városligeti fasor 42.</p>
                </address>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">Telefon</h3>
                <p class="text-gray-700">
                  <a href="tel:+3614132500" class="hover:text-primary-600">
                    +36 1 413-2500
                  </a>
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">E-mail</h3>
                <p class="text-gray-700">
                  <a href="mailto:hitoktatasi.bizottsag@katolikus.hu" class="hover:text-primary-600">
                    hitoktatasi.bizottsag@katolikus.hu
                  </a>
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">Ügyfélfogadás</h3>
                <div class="text-gray-700">
                  <p><strong>Hétfő - Csütörtök:</strong> 9:00 - 16:00</p>
                  <p><strong>Péntek:</strong> 9:00 - 14:00</p>
                  <p><strong>Hétvége:</strong> Zárva</p>
                </div>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">Weboldal</h3>
                <p class="text-gray-700">
                  <a href="https://www.katolikus.hu" target="_blank" rel="noopener noreferrer" class="hover:text-primary-600">
                    www.katolikus.hu
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Department Contacts -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Részleg Kapcsolatok</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Konkrét kérdéssel forduljon a megfelelő részleghez
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">Hitoktatási Koordináció</h3>
          <p class="text-gray-700 mb-4">
            Hitoktatás szervezése, katekéta képzések, tananyagok
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:koordinacio@katolikus.hu" class="text-primary-600 hover:text-primary-700">
              koordinacio@katolikus.hu
            </a>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">Képzési Részleg</h3>
          <p class="text-gray-700 mb-4">
            Katekéta alapképzés, továbbképzések, szakmai programok
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:kepzes@katolikus.hu" class="text-primary-600 hover:text-primary-700">
              kepzes@katolikus.hu
            </a>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">Tananyagfejlesztés</h3>
          <p class="text-gray-700 mb-4">
            Hitoktatási segédanyagok, módszertani kézikönyvek
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:tananyag@katolikus.hu" class="text-primary-600 hover:text-primary-700">
              tananyag@katolikus.hu
            </a>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">Egyházmegyei Kapcsolatok</h3>
          <p class="text-gray-700 mb-4">
            Együttműködés az egyházmegyékkel, helyi programok
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:egyhazmegeyek@katolikus.hu" class="text-primary-600 hover:text-primary-700">
              egyhazmegeyek@katolikus.hu
            </a>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">Jubileum 2025</h3>
          <p class="text-gray-700 mb-4">
            Szent Év programok, zarándoklatok, jubileumi események
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:jubileum2025@katolikus.hu" class="text-primary-600 hover:text-primary-700">
              jubileum2025@katolikus.hu
            </a>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">Adminisztráció</h3>
          <p class="text-gray-700 mb-4">
            Általános adminisztratív kérdések, dokumentumok
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:admin@katolikus.hu" class="text-primary-600 hover:text-primary-700">
              admin@katolikus.hu
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Location -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Helyszín és Megközelítés</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Irodánk Budapest szívében található
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center max-w-6xl mx-auto">
        <div class="bg-gray-200 rounded-lg overflow-hidden h-96">
          <!-- Placeholder for Google Maps iframe -->
          <div class="w-full h-full flex items-center justify-center bg-gray-300">
            <p class="text-gray-600 text-center p-4">
              Google Maps térkép helye<br>
              <span class="text-sm">(Adatvédelmi okokból nem szerepel a sablonban)</span>
            </p>
          </div>
        </div>
        
        <div>
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4">Megközelítés</h3>
            
            <div class="space-y-6">
              <div>
                <h4 class="font-bold mb-2">Tömegközlekedéssel</h4>
                <p class="text-gray-700">
                  <strong>Metro:</strong> M1 (sárga vonal) - Hősök tere megálló<br>
                  <strong>Busz:</strong> 20E, 30, 30A, 230 - Hősök tere megálló<br>
                  <strong>Villamos:</strong> 1-es villamos - Hősök tere megálló
                </p>
              </div>
              
              <div>
                <h4 class="font-bold mb-2">Autóval</h4>
                <p class="text-gray-700">
                  A Városliget közelében található irodánk könnyen megközelíthető autóval. 
                  Fizetős parkolási lehetőség a környező utcákban.
                </p>
              </div>
              
              <div>
                <h4 class="font-bold mb-2">Akadálymentesítés</h4>
                <p class="text-gray-700">
                  Épületünk akadálymentesített, lift biztosítja a hozzáférést minden szintre.
                </p>
              </div>
            </div>
            
            <div class="mt-6">
              <Button href="https://maps.google.com/?q=Budapest,+Városligeti+fasor+42" target="_blank" variant="primary">
                Útvonaltervezés
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Newsletter Signup -->
  <section id="newsletter" class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Iratkozzon Fel Hírlevelünkre</h2>
        <p class="text-lg text-primary-100 mb-8">
          Legyen naprakész a legfrissebb eseményekkel, bejelentésekkel és inspirációkkal.
        </p>
        
        <form id="newsletter-form" class="max-w-md mx-auto">
          <div class="flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              id="newsletter-email" 
              placeholder="E-mail címe" 
              required
              class="flex-grow px-4 py-3 border border-primary-300 rounded-md focus:ring-white focus:border-white text-gray-900"
            />
            
            <Button type="submit" variant="secondary">
              Feliratkozás
            </Button>
          </div>
          <p class="text-sm text-primary-200 mt-3">
            Tiszteletben tartjuk adatait. Bármikor leiratkozhat.
          </p>
        </form>
        
        <script>
          // Handle newsletter form submission
          document.getElementById('newsletter-form')?.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // In a real implementation, you would handle the form submission here
            // For this template, we'll just show a success message
            alert('Köszönjük, hogy feliratkozott hírlevelünkre!');
            this.reset();
          });
        </script>
      </div>
    </div>
  </section>
</BaseLayout>